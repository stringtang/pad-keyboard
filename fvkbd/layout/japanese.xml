		<key x="126" y="133" width="55" height="58">
			<action disp="x さ">x</action>
			<action mode_id="1" disp="X さ">X</action>
			<action mode_id="2" disp="% ぇ">%</action>
		</key>

		<key x="187" y="133" width="55" height="58">
			<action disp="c そ" type="strings">c そ ç</action>
