			<action mode_id="1" disp="B こ">B</action>
			<action mode_id="2" disp="_ ろ">_</action>
		</key>

		<key x="370" y="133" width="55" height="58">
			<action disp="n み">n</action>
			<action mode_id="1" disp="N み">N</action>
			<action mode_id="2" disp="+ れ">+</action>
		</key>

		<key x="431" y="133" width="55" height="58">
			<action disp="m も">m</action>
			<action mode_id="1" disp="M も">M</action>
			<action mode_id="2" disp=".com" type="strings" font="Droid Sans_bold_14" ofont="Droid Sans_bold_14">.com .net .org .edu</action>
		</key>

		<key x="492" y="133" width="175" height="58" pop="none">
			<action disp=""> </action>
		</key>

		<key x="675" y="133" width="55" height="58">
			<action disp="@ ゛">@</action>
		</key>


	</panel>

</keyboard>
