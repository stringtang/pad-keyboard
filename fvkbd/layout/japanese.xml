			<action mode_id="2" disp="; れ">;</action>
		</key>

		<key x="309" y="69" width="55" height="58">
			<action disp="g き">g</action>
			<action mode_id="1" disp="G き">G</action>
			<action mode_id="2" disp="( ゅ" type="strings">( ゅ [ ゜ { 「 《 ﹤</action>
		</key>

		<key x="370" y="69" width="55" height="58">
			<action disp="h く">h</action>
			<action mode_id="1" disp="H く">H</action>
			<action mode_id="2" disp=") ょ" type="strings">) ょ ] む } 」 》 ﹥</action>
		</key>

		<key x="431" y="69" width="55" height="58">
			<action disp="j ま">j</action>
			<action mode_id="1" disp="J ま">J</action>
			<action mode_id="2" disp="£" type="strings">£ $ € ¥</action>
