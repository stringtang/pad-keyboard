		<key x="736" y="69" width="60" height="122" pop="none">
			<action img="key_return.png" img_dn="key_return_dn.png" disp="◀┛" type="sym">Return</action>
		</key>

		<!--next row-->

		<key x="4" y="133" width="55" height="58">
			<action img="key_hide.png" img_dn="key_hide_dn.png" disp="↧" type="script">disable-scim.py</action>
		</key>

		<key x="65" y="133" width="55" height="58">
			<action disp="z つ">z</action>
			<action mode_id="1" disp="Z っ">Z</action>
			<action mode_id="2" disp='" ふ' type="strings">" ふ “ ” ‘ ’</action>
